{
  "devDependencies": {
    "esbuild": "0.25.2",
    "tailwindcss": "^3.4.17"
  },
  "scripts": {
    "tailwind": "tailwindcss -m -i tailwind/input.css -o resources/public/output.css",
    "tailwind:watch": "tailwindcss -i tailwind/input.css -o resources/public/output.css --watch",
    "extension": "esbuild extension/file.js --bundle --minify --outfile=extension/content-script.js",
    "extension:watch": "esbuild extension/file.js --bundle --watch --outfile=extension/content-script.js"
  }
}
